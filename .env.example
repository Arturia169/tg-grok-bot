# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=

# Your OpenAI-compatible endpoint (adapter)
# Use your Cloudflare domain; include /v1
OPENAI_BASE_URL=https://grok.yuki169.eu.org/v1

# grok2api app.api_key
OPENAI_API_KEY=

# Comma-separated Telegram chat ids allowed to use the bot (optional).
# If empty, bot replies to anyone who can message it.
ALLOWED_CHAT_IDS=

DEFAULT_MODEL=grok-4.1-fast
IMAGE_MODEL=grok-imagine-1.0
IMAGE_EDIT_MODEL=grok-imagine-1.0-edit
HTTP_TIMEOUT=120

# Aliyun Model Studio (DashScope) TTS
# Only supported in Beijing region per Aliyun docs.
DASHSCOPE_API_KEY=
TTS_ENABLED=0

# TTS provider: dashscope | qwen
TTS_PROVIDER=dashscope

# Provider=dashscope (CosyVoice)
TTS_DEFAULT_MODEL=cosyvoice-v3-flash
TTS_DEFAULT_VOICE=longyang
# When default model fails (e.g., quota exhausted), fallback to these
TTS_FALLBACK_MODEL=cosyvoice-v3-flash
TTS_FALLBACK_VOICE=longyang

# Provider=qwen (Qwen-TTS)
# Beijing: https://dashscope.aliyuncs.com/api/v1
# Singapore: https://dashscope-intl.aliyuncs.com/api/v1
QWEN_TTS_BASE_URL=https://dashscope.aliyuncs.com/api/v1
QWEN_TTS_MODEL=qwen3-tts-flash
QWEN_TTS_VOICE=Cherry
QWEN_TTS_LANGUAGE=Chinese

# Shared limits
TTS_DAILY_LIMIT=10
TTS_MAX_CHARS=200
# 0-100, default 50; increase if voice is too quiet
TTS_VOLUME=100
# If 1, voice replies are enabled by default (still limited by daily limit / max chars).
TTS_DEFAULT_ON=1

# Memory persistence (SQLite)
MEMORY_DB_PATH=/data/memory.sqlite
MEMORY_MAX_LOG_MESSAGES=120
MEMORY_SUMMARY_MAX_CHARS=2000
# Update summary every N user messages
MEMORY_SUMMARY_UPDATE_EVERY=12

# Personas
# Put *.txt in ./personas (mounted to /data/personas)
PERSONAS_DIR=/data/personas

# OCR
OCR_ENABLED=1
OCR_DEFAULT_ON=0
OCR_MODEL=grok-4.1-expert

# Scene image prompt pre-summarization
SCENE_SUMMARIZE=1
# If unset, defaults to DEFAULT_MODEL
# SCENE_SUMMARIZE_MODEL=grok-4.1-fast
